                    "Daha hÄ±zlÄ± iÅŸlemci kullanarak",
                    "Cache bellek ekleyerek"
                ],
                correct: 1
            },
            {
                question: "AÅŸaÄŸÄ±dakilerden hangisi yarÄ±iletken bir elementtir?",
                options: [
                    "BakÄ±r",
                    "AlÃ¼minyum",
                    "Silisyum",
                    "Demir"
                ],
                correct: 2
            },
            {
                question: "Kontrol biriminin gÃ¶revi nedir?",
                options: [
                    "Sadece matematiksel iÅŸlemler yapar",
                    "TÃ¼m iÅŸlemlerin sÄ±rasÄ±nÄ± belirler ve denetim iÅŸaretlerini Ã¼retir",
                    "Veri saklar",
                    "Ekrana gÃ¶rÃ¼ntÃ¼ gÃ¶nderir"
                ],
                correct: 1
            }
        ];

        // Flashcard Verileri
        const flashcards = [
            { front: "CPU Nedir?", back: "Central Processing Unit - HafÄ±zaya yÃ¼klÃ¼ programÄ±n Ã§alÄ±ÅŸmasÄ±nÄ± saÄŸlayan birim" },
            { front: "ALU Nedir?", back: "Arithmetic Logic Unit - CPU iÃ§erisindeki matematiksel ve mantÄ±ksal iÅŸlemlerin yapÄ±ldÄ±ÄŸÄ± birim" },
            { front: "Von Neumann Mimarisi", back: "Veri ve program alanÄ±nÄ±n aynÄ± hafÄ±za haritasÄ± Ã¼zerinde bulunduÄŸu, tek bellek ve tek veri yolu kullanan mimari" },
            { front: "Harvard Mimarisi", back: "Veri ve komutlar iÃ§in ayrÄ± bellekler ve ayrÄ± veri yollarÄ± kullanan, paralel iÅŸlem yapabilen mimari" },
            { front: "YarÄ±iletken", back: "Elektrik akÄ±mÄ±na karÅŸÄ± ne iyi bir iletken ne de iyi bir yalÄ±tkan Ã¶zelliÄŸi gÃ¶steren malzemeler (Si, Ge, C)" },
            { front: "Mikrobilgisayar", back: "Bir tÃ¼m devre (chip) Ã¼zerinde Ã¼retilen bilgisayar. Mikrokontroller veya Mikrodenetleyici olarak da adlandÄ±rÄ±lÄ±r" },
            { front: "3 Durumlu Buffer", back: "MikroiÅŸlemcili sistemlerde ortak veri yolu problemini Ã§Ã¶zen devre elemanÄ±" },
            { front: "Adreslenebilir HafÄ±za", back: "2^(Adres bit sayÄ±sÄ±) formÃ¼lÃ¼ ile hesaplanÄ±r. Ã–rnek: 16 bit adres = 2^16 = 64KB" },
            { front: "Valans Elektronu", back: "Bir atomun en dÄ±ÅŸ yÃ¶rÃ¼ngesindeki elektronlar. YarÄ±iletkenlerde 4 adet valans elektronu bulunur" },
            { front: "TransistÃ¶r Tarihi", back: "1948 yÄ±lÄ±nda AT&T Bell laboratuarlarÄ±nda John Bardeen, Walter Brittain ve William Shockley tarafÄ±ndan geliÅŸtirildi" }
        ];

        let currentQuizState = [];
        let answeredQuestions = 0;

        // Tab DeÄŸiÅŸtirme
        function showTab(tabName) {
            document.querySelectorAll('.tab-content').forEach(content => {
                content.classList.remove('active');
            });
            document.querySelectorAll('.tab').forEach(tab => {
                tab.classList.remove('active');
            });
            document.getElementById(tabName).classList.add('active');
            event.target.classList.add('active');
        }

        // Quiz BaÅŸlat
        function initQuiz() {
            currentQuizState = quizQuestions.map(() => null);
            answeredQuestions = 0;
            const container = document.getElementById('quizContainer');
            container.innerHTML = '';
            
            quizQuestions.forEach((q, index) => {
                const questionDiv = document.createElement('div');
                questionDiv.className = 'quiz-question';
                questionDiv.innerHTML = `
                    <h3>Soru ${index + 1}</h3>
                    <p>${q.question}</p>
                    <ul class="quiz-options" id="options-${index}">
                        ${q.options.map((opt, optIndex) => 
                            `<li onclick="selectAnswer(${index}, ${optIndex})">${opt}</li>`
                        ).join('')}
                    </ul>
                `;
                container.appendChild(questionDiv);
            });
        }

        // Cevap SeÃ§imi
        function selectAnswer(questionIndex, answerIndex) {
            if (currentQuizState[questionIndex] !== null) return;
            
            currentQuizState[questionIndex] = answerIndex;
            answeredQuestions++;
            
            const optionsList = document.getElementById(`options-${questionIndex}`);
            const options = optionsList.querySelectorAll('li');
            
            options[answerIndex].classList.add(
                answerIndex === quizQuestions[questionIndex].correct ? 'correct' : 'incorrect'
            );
            
            if (answerIndex !== quizQuestions[questionIndex].correct) {
                options[quizQuestions[questionIndex].correct].classList.add('correct');
            }
            
            options.forEach(opt => opt.style.pointerEvents = 'none');
            
            updateProgress();
            
            if (answeredQuestions === quizQuestions.length) {
                showQuizResults();
            }
        }

        // Ä°lerleme GÃ¼ncelleme
        function updateProgress() {
            const progress = (answeredQuestions / quizQuestions.length) * 100;
            const progressFill = document.getElementById('quizProgress');
            progressFill.style.width = progress + '%';
            progressFill.textContent = Math.round(progress) + '%';
        }

        // SonuÃ§larÄ± GÃ¶ster
        function showQuizResults() {
            const correctAnswers = currentQuizState.filter((answer, index) => 
                answer === quizQuestions[index].correct
            ).length;
            
            const percentage = (correctAnswers / quizQuestions.length) * 100;
            const scoreDiv = document.getElementById('quizScore');
            
            let message = '';
            if (percentage >= 90) message = 'ğŸ‰ MÃ¼kemmel!';
            else if (percentage >= 70) message = 'ğŸ‘ Ã‡ok Ä°yi!';
            else if (percentage >= 50) message = 'ğŸ‘ Ä°yi!';
            else message = 'ğŸ“š Biraz Daha Ã‡alÄ±ÅŸmalÄ±sÄ±n!';
            
            scoreDiv.innerHTML = `
                ${message}<br>
                DoÄŸru: ${correctAnswers} / ${quizQuestions.length}<br>
                BaÅŸarÄ± OranÄ±: ${percentage.toFixed(1)}%
            `;
            scoreDiv.style.display = 'block';
        }

        // Quiz SÄ±fÄ±rlama
        function resetQuiz() {
            document.getElementById('quizScore').style.display = 'none';
            initQuiz();
        }

        // Flashcard BaÅŸlatma
        function initFlashcards() {
            const container = document.getElementById('flashcardsContainer');
            flashcards.forEach((card, index) => {
                const cardDiv = document.createElement('div');
                cardDiv.className = 'flashcard';
                cardDiv.id = `flashcard-${index}`;
                cardDiv.innerHTML = `<div class="flashcard-front">${card.front}</div>`;
                cardDiv.onclick = () => toggleFlashcard(index);
                container.appendChild(cardDiv);
            });
        }

        // Flashcard Ã‡evirme
        function toggleFlashcard(index) {
            const card = document.getElementById(`flashcard-${index}`);
            const isFlipped = card.classList.contains('flipped');
            
            card.classList.toggle('flipped');
            card.innerHTML = isFlipped ? 
                `<div class="flashcard-front">${flashcards[index].front}</div>` :
                `<div class="flashcard-back">${flashcards[index].back}</div>`;
        }

        // Ã‡Ã¶zÃ¼m GÃ¶sterme/Gizleme
        function toggleSolution(solId) {
            const sol = document.getElementById(solId);
            sol.style.display = sol.style.display === 'none' ? 'block' : 'none';
        }

        // Sayfa YÃ¼klendiÄŸinde
        window.onload = function() {
            initQuiz();
            initFlashcards();
        };
    </script>
</body>
